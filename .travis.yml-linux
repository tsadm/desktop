sudo: required

dist: trusty

language: python

python:
  - 2.7.9
  - 2.7.11
  - 3.4.2
  - 3.5.1

install:
  - pip install coverage
  - pip install codecov
  - pip install bottle
  - pip install docker-py
  - pip install configparser

script:
  - coverage run --source='.' test.py

after_success:
  - coverage report
  - codecov

notifications:
  irc:
    - irc.freenode.org#tsadm
