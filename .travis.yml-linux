sudo: required

dist: trusty

language: python

python:
  - 2.7
  - 3.4
  - 3.5
  - nightly

env:
  - PYCMD=python

install:
  - pip install coverage
  - pip install codecov
  - make install

script:
  - make test TEST_ARGS='--test-installed'
  - make clean
  - make test-coverage

after_success:
  - codecov

notifications:
  irc:
    - irc.freenode.org#tsadm
