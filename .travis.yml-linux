sudo: required

dist: trusty

language: python

python:
  - 2.7
  - 3.4
  - 3.5
  - nightly

install:
  - pip install coverage
  - pip install codecov
  - pip install bottle
  - pip install docker-py
  - pip install configparser

script:
  - coverage run --source='lib/tsdesktop' test.py

after_success:
  - coverage report
  - codecov

notifications:
  irc:
    - irc.freenode.org#tsadm
