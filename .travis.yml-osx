language: c

os: osx

osx_image: xcode7.3

sudo: required

install:
  - ./osx/bootstrap.sh --testing
  - pip3 install virtualenv
  - make virtualenv

script:
  - eval "$(docker-machine env default)"
  - docker-machine ls
  - docker version || true
  - make test-all TEST_ARGS='--test-installed'

notifications:
  irc:
    - irc.freenode.org#tsadm
