language: c

os: osx

osx_image: xcode7.3

install:
  - brew update
  - brew tap caskroom/cask
  - brew cask install virtualbox
  - brew install docker
  - brew install boot2docker
  - brew install python
  - brew install python3
  - pip3 install virtualenv
  - make virtualenv

script:
  - boot2docker init
  - boot2docker up
  - docker version
  - make test-all

notifications:
  irc:
    - irc.freenode.org#tsadm
